{% load static compress %}
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{% block title %}E-Sports{% endblock %}</title>

  <link rel="stylesheet" href="{% static 'css/main.css' %}">

</head>
<body>
  <header>
    <nav>
      <a class="logo" href="{% url 'core:tournament_list' %}">AR</a>
      <div style="flex:1"></div>
      {% if user.is_authenticated %}
        <a href="{% url 'core:my_applications' %}">My_Tournaments</a>
        <a href="{% url 'accounts:profile' %}">{{ user.username }}</a>
        <form action="{% url 'accounts:logout' %}" method="post" style="display:inline;">
        {% csrf_token %}
        <button type="submit">Logout</button> 
        </form>
      
        <a href="{% url 'accounts:login' %}">Login</a>
        <a href="{% url 'accounts:signup' %}">Sign up</a>
      {% endif %}
    </nav>
  </header>
  <main>
    {% if messages %}
      <ul class="messages">
        {% for m in messages %}
          <li>{{ m }}</li>
        {% endfor %}
      </ul>
    {% endif %}
    {% block content %}{% endblock %}
  </main>

  <script src="{% static 'js/main.js' %}"></script>

  {% block scripts %}{% endblock %}
</body>
</html>











                    <form class="newsletter-form" id="newsletterForm" method="post" action="{% url "newsletter" %}">
                        {% csrf_token %}
                        <div class="form-group">
                            <input 
                                type="email" 
                                class="newsletter-input" 
                                placeholder="Enter your email"
                                required
                                aria-label="Email address"
                                name="email"
                            >
                            <button type="submit" class="newsletter-btn" aria-label="Subscribe">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                        <div class="form-message" id="formMessage"></div>
                    </form>
                    